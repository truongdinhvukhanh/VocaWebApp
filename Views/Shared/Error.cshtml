@model ErrorViewModel
@{
    ViewData["Title"] = "Lỗi";
}

<div class="card shadow-custom border-0 bg-white rounded-4 p-4 mb-4">
    <div class="card-body text-center">
        <h1 class="display-1 text-danger mb-4">@Model.RequestId</h1>
        <h2 class="h4 mb-4">@Model.ShowRequestId</h2>
        
        <p class="text-muted mb-4">
            @if (Model.ShowRequestId)
            {
                <span>
                    <strong>Request ID:</strong> <code>@Model.RequestId</code>
                </span>
            }
        </p>
        
        <div class="mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                <i class="fas fa-home me-2"></i>Quay lại trang chủ
            </a>
        </div>
    </div>
</div>

<div class="card shadow-sm border-0 bg-white rounded-4 p-4">
    <div class="card-body">
        <h3 class="h5 mb-4">Bạn có thể thử:</h3>
        <ul class="list-unstyled">
            <li class="mb-3">
                <i class="fas fa-sync-alt me-2 text-primary"></i>
                <a href="javascript:window.location.reload();">Tải lại trang</a>
            </li>
            <li class="mb-3">
                <i class="fas fa-arrow-left me-2 text-primary"></i>
                <a href="javascript:history.back();">Quay lại trang trước</a>
            </li>
            <li class="mb-3">
                <i class="fas fa-search me-2 text-primary"></i>
                <a asp-controller="Home" asp-action="Search">Tìm kiếm</a>
            </li>
            <li>
                <i class="fas fa-envelope me-2 text-primary"></i>
                <a href="mailto:support@vocawebapp.com">Liên hệ hỗ trợ</a>
            </li>
        </ul>
    </div>
</div>