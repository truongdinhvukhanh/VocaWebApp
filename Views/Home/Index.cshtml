				</div>

				<!-- Feature 2 -->
				<div class="text-center p-8 rounded-2xl hover:shadow-lg transition-all duration-300">
					<div class="w-16 h-16 bg-green-100 rounded-xl flex items-center justify-center mx-auto mb-6">
