@model VocaWebApp.Models.ManageViewModels.ProfileViewModel
@{
    ViewData["Title"] = "Quản lý tài khoản";
}

<div class="min-h-screen bg-[#F5F5F5] py-8">
    <div class="max-w-6xl mx-auto px-4">
        <!-- Page Header với gradient xanh dương -->
        <div class="text-center mb-8">
            <div class="w-20 h-20 bg-gradient-to-r from-[#205493] to-[#4A8BDF] rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
            </div>
            <h1 class="text-4xl font-bold text-[#212121] mb-2">Quản lý tài khoản</h1>
            <p class="text-[#666666] text-lg">Cập nhật thông tin cá nhân và cài đặt bảo mật</p>
        </div>

        <!-- Status Message với màu phù hợp -->
        @if (!string.IsNullOrEmpty(TempData["StatusMessage"]?.ToString()))
        {
            <div class="mb-8 p-4 rounded-xl border @(TempData["StatusMessage"].ToString().Contains("thành công") || TempData["StatusMessage"].ToString().Contains("successfully") ? "bg-[#E8F5E8] border-[#4CAF50] text-[#2E7D32]" : "bg-[#FFEBEE] border-[#F44336] text-[#C62828]")">
                <div class="flex items-center justify-center">
                    @if (TempData["StatusMessage"].ToString().Contains("thành công") || TempData["StatusMessage"].ToString().Contains("successfully"))
                    {
                        <svg class="w-6 h-6 mr-3 text-[#4CAF50]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    }
                    else
                    {
                        <svg class="w-6 h-6 mr-3 text-[#F44336]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    }
                    <span class="font-semibold text-lg">@TempData["StatusMessage"]</span>
                </div>
            </div>
        }

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- User Profile Card -->
            <div class="lg:col-span-1">
                <div class="bg-white rounded-2xl shadow-xl border border-[#E0E0E0] overflow-hidden">
                    <!-- Profile Header với gradient -->
                    <div class="bg-gradient-to-r from-[#205493] to-[#4A8BDF] px-6 py-8 text-center">
                        <!-- Avatar với border xanh dương chính -->
                        <div class="w-24 h-24 mx-auto mb-4 relative">
                            @if (!string.IsNullOrEmpty(Model.CurrentProfileImageUrl))
                            {
                                <img src="@Model.CurrentProfileImageUrl" alt="Profile" class="w-full h-full rounded-full object-cover border-4 border-white shadow-lg">
                            }
                            else
                            {
                                <div class="w-full h-full bg-gradient-to-r from-[#FF6F20] to-[#E55A11] rounded-full flex items-center justify-center border-4 border-white shadow-lg">
                                    <span class="text-2xl font-bold text-white">
                                        @((Model.FullName ?? "User").Substring(0, Math.Min(2, (Model.FullName ?? "User").Length)).ToUpper())
                                    </span>
                                </div>
                            }
                        </div>

                        <h2 class="text-xl font-bold text-white mb-2">@(Model.FullName ?? "Người dùng")</h2>
                        <p class="text-[#A5D8DD] text-sm">@Model.Email</p>

                        @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                        {
                            <p class="text-[#A5D8DD] text-sm mt-1 flex items-center justify-center">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                                </svg>
                                @Model.PhoneNumber
                            </p>
                        }
                    </div>

                    <!-- Profile Stats -->
                    <div class="p-6 bg-[#F5F5F5]">
                        <h3 class="text-[#212121] font-semibold mb-4 flex items-center">
                            <svg class="w-5 h-5 mr-2 text-[#205493]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                            </svg>
                            Thống kê hoạt động
                        </h3>

                        <div class="space-y-3">
                            <div class="flex justify-between items-center">
                                <span class="text-[#666666]">Bộ từ vựng:</span>
                                <span class="font-semibold text-[#205493] bg-[#E3F2FD] px-2 py-1 rounded-lg">12</span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-[#666666]">Từ đã học:</span>
                                <span class="font-semibold text-[#4CAF50] bg-[#E8F5E8] px-2 py-1 rounded-lg">245</span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-[#666666]">Streak ngày:</span>
                                <span class="font-semibold text-[#FF6F20] bg-[#FFF3E0] px-2 py-1 rounded-lg">7</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Management Options -->
            <div class="lg:col-span-2">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Profile Management Card -->
                    <div class="bg-white rounded-2xl shadow-xl border border-[#E0E0E0] overflow-hidden hover:shadow-2xl transition-all duration-300 hover:scale-105">
                        <div class="bg-gradient-to-r from-[#4CAF50] to-[#388E3C] p-6">
                            <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center mb-4">
                                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                </svg>
                            </div>
                            <h3 class="text-white font-bold text-lg mb-2">Thông tin cá nhân</h3>
                            <p class="text-white/80 text-sm">Cập nhật hồ sơ và ảnh đại diện</p>
                        </div>

                        <div class="p-6">
                            <p class="text-[#666666] mb-4">Thay đổi tên hiển thị, ảnh đại diện và thông tin liên hệ của bạn.</p>
                            <a asp-controller="Manage" asp-action="Profile"
                               class="inline-flex items-center bg-[#4CAF50] hover:bg-[#388E3C] text-white font-semibold px-6 py-3 rounded-xl transition-all duration-300 transform hover:scale-105">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                                </svg>
                                Chỉnh sửa hồ sơ
                            </a>
                        </div>
                    </div>

                    <!-- Security Card -->
                    <div class="bg-white rounded-2xl shadow-xl border border-[#E0E0E0] overflow-hidden hover:shadow-2xl transition-all duration-300 hover:scale-105">
                        <div class="bg-gradient-to-r from-[#FF6F20] to-[#E55A11] p-6">
                            <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center mb-4">
                                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                                </svg>
                            </div>
                            <h3 class="text-white font-bold text-lg mb-2">Bảo mật</h3>
                            <p class="text-white/80 text-sm">Quản lý mật khẩu và bảo mật</p>
                        </div>

                        <div class="p-6">
                            <p class="text-[#666666] mb-4">Đổi mật khẩu và cài đặt xác thực hai yếu tố để bảo vệ tài khoản.</p>
                            <a asp-controller="Manage" asp-action="ChangePassword"
                               class="inline-flex items-center bg-[#FF6F20] hover:bg-[#E55A11] text-white font-semibold px-6 py-3 rounded-xl transition-all duration-300 transform hover:scale-105">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
                                </svg>
                                Đổi mật khẩu
                            </a>
                        </div>
                    </div>

                    <!-- Learning Settings Card -->
                    <div class="bg-white rounded-2xl shadow-xl border border-[#E0E0E0] overflow-hidden hover:shadow-2xl transition-all duration-300 hover:scale-105">
                        <div class="bg-gradient-to-r from-[#9C27B0] to-[#7B1FA2] p-6">
                            <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center mb-4">
                                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4" />
                                </svg>
                            </div>
                            <h3 class="text-white font-bold text-lg mb-2">Cài đặt học tập</h3>
                            <p class="text-white/80 text-sm">Tùy chỉnh trải nghiệm học tập</p>
                        </div>

                        <div class="p-6">
                            <p class="text-[#666666] mb-4">Điều chỉnh mục tiêu hàng ngày, thông báo và các tùy chọn học tập khác.</p>
                            <a href="#"
                               class="inline-flex items-center bg-[#9C27B0] hover:bg-[#7B1FA2] text-white font-semibold px-6 py-3 rounded-xl transition-all duration-300 transform hover:scale-105">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                </svg>
                                Cài đặt học tập
                            </a>
                        </div>
                    </div>

                    <!-- Data & Privacy Card -->
                    <div class="bg-white rounded-2xl shadow-xl border border-[#E0E0E0] overflow-hidden hover:shadow-2xl transition-all duration-300 hover:scale-105">
                        <div class="bg-gradient-to-r from-[#2196F3] to-[#1976D2] p-6">
                            <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center mb-4">
                                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                                </svg>
                            </div>
                            <h3 class="text-white font-bold text-lg mb-2">Dữ liệu & Quyền riêng tư</h3>
                            <p class="text-white/80 text-sm">Quản lý dữ liệu cá nhân</p>
                        </div>

                        <div class="p-6">
                            <p class="text-[#666666] mb-4">Xem và quản lý dữ liệu cá nhân, xuất dữ liệu hoặc xóa tài khoản.</p>
                            <a href="#"
                               class="inline-flex items-center bg-[#2196F3] hover:bg-[#1976D2] text-white font-semibold px-6 py-3 rounded-xl transition-all duration-300 transform hover:scale-105">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                </svg>
                                Quản lý dữ liệu
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Quick Stats Dashboard -->
                <div class="mt-8 bg-white rounded-2xl shadow-xl border border-[#E0E0E0] p-6">
                    <h3 class="text-[#212121] font-bold text-xl mb-6 flex items-center">
                        <svg class="w-6 h-6 mr-3 text-[#205493]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z" />
                        </svg>
                        Tổng quan hoạt động gần đây
                    </h3>

                    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                        <div class="text-center p-4 bg-[#E3F2FD] rounded-xl">
                            <div class="text-2xl font-bold text-[#205493] mb-2">156</div>
                            <div class="text-[#666666] text-sm">Từ đã ôn hôm nay</div>
                        </div>
                        <div class="text-center p-4 bg-[#E8F5E8] rounded-xl">
                            <div class="text-2xl font-bold text-[#4CAF50] mb-2">89%</div>
                            <div class="text-[#666666] text-sm">Độ chính xác</div>
                        </div>
                        <div class="text-center p-4 bg-[#FFF3E0] rounded-xl">
                            <div class="text-2xl font-bold text-[#FF6F20] mb-2">23</div>
                            <div class="text-[#666666] text-sm">Phút học hôm nay</div>
                        </div>
                        <div class="text-center p-4 bg-[#F3E5F5] rounded-xl">
                            <div class="text-2xl font-bold text-[#9C27B0] mb-2">7</div>
                            <div class="text-[#666666] text-sm">Ngày liên tiếp</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
