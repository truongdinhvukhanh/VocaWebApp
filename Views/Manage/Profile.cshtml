@model VocaWebApp.Models.ManageViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Cập nhật thông tin cá nhân";
}

<div class="min-h-screen bg-[#F5F5F5] py-8">
    <div class="max-w-4xl mx-auto px-4">
        <!-- Page Header với gradient xanh dương -->
        <div class="text-center mb-8">
            <div class="w-16 h-16 bg-gradient-to-r from-[#205493] to-[#4A8BDF] rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
            </div>
            <h1 class="text-3xl font-bold text-[#212121] mb-2">Cập nhật thông tin cá nhân</h1>
            <p class="text-[#666666] text-lg">Thay đổi thông tin cá nhân và ảnh đại diện của bạn</p>
        </div>

        <!-- Status Message -->
        @if (!string.IsNullOrEmpty(TempData["StatusMessage"]?.ToString()))
        {
            <div class="mb-6 p-4 rounded-xl border @(TempData["StatusMessage"].ToString().Contains("thành công") || TempData["StatusMessage"].ToString().Contains("successfully") ? "bg-[#E8F5E8] border-[#4CAF50] text-[#2E7D32]" : "bg-[#FFEBEE] border-[#F44336] text-[#C62828]")">
                <div class="flex items-center">
                    @if (TempData["StatusMessage"].ToString().Contains("thành công") || TempData["StatusMessage"].ToString().Contains("successfully"))
                    {
                        <svg class="w-5 h-5 mr-3 text-[#4CAF50]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    }
                    else
                    {
                        <svg class="w-5 h-5 mr-3 text-[#F44336]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    }
                    <span class="font-medium">@TempData["StatusMessage"]</span>
                </div>
            </div>
        }

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Avatar Section -->
            <div class="lg:col-span-1">
                <div class="bg-white rounded-2xl shadow-xl border border-[#E0E0E0] p-6 text-center">
                    <h3 class="text-[#212121] font-semibold mb-6 flex items-center justify-center">
                        <svg class="w-5 h-5 mr-2 text-[#205493]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        Ảnh đại diện
                    </h3>

                    <!-- Current Avatar Display -->
                    <div class="mb-6 relative">
                        @if (!string.IsNullOrEmpty(Model.CurrentProfileImageUrl))
                        {
                            <img id="avatar-preview" src="@Model.CurrentProfileImageUrl" alt="Profile" class="w-32 h-32 rounded-full mx-auto object-cover shadow-lg border-4 border-[#205493]">
                        }
                        else
                        {
                            <div id="avatar-preview" class="w-32 h-32 bg-gradient-to-r from-[#205493] to-[#4A8BDF] rounded-full flex items-center justify-center mx-auto shadow-lg">
                                <span class="text-3xl font-bold text-white">
                                    @((Model.FullName ?? "User").Substring(0, Math.Min(2, (Model.FullName ?? "User").Length)).ToUpper())
                                </span>
                            </div>
                        }

                        <!-- Camera Icon Overlay -->
                        <div class="absolute bottom-0 right-1/2 transform translate-x-16 translate-y-2">
                            <label for="avatar-upload" class="w-10 h-10 bg-[#FF6F20] hover:bg-[#E55A11] rounded-full flex items-center justify-center cursor-pointer shadow-lg transition-all duration-300 hover:scale-110">
                                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z" />
                                </svg>
                            </label>
                            <input type="file" id="avatar-upload" class="hidden" accept="image/*" onchange="previewAvatar(this)">
                        </div>
                    </div>

                    <p class="text-[#666666] text-sm mb-4">Nhấp vào biểu tượng để thay đổi ảnh đại diện</p>

                    <!-- Upload Guidelines -->
                    <div class="bg-[#E3F2FD] rounded-lg p-3 text-left">
                        <h4 class="text-[#205493] font-medium text-sm mb-2">Hướng dẫn:</h4>
                        <ul class="text-[#666666] text-xs space-y-1">
                            <li>• Kích thước tối đa: 2MB</li>
                            <li>• Định dạng: JPG, PNG, GIF</li>
                            <li>• Tỷ lệ đề xuất: vuông (1:1)</li>
                            <li>• Độ phân giải tối thiểu: 200x200px</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Profile Form -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-2xl shadow-xl border border-[#E0E0E0] overflow-hidden">
                    <!-- Form Header với gradient -->
                    <div class="bg-gradient-to-r from-[#205493] to-[#4A8BDF] px-8 py-6">
                        <h2 class="text-xl font-semibold text-white flex items-center">
                            <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                            </svg>
                            Thông tin cá nhân
                        </h2>
                    </div>

                    <div class="p-8">
                        <form asp-controller="Manage" asp-action="Profile" method="post" enctype="multipart/form-data" class="space-y-6">
                            <div asp-validation-summary="ModelOnly" class="text-[#F44336] bg-[#FFEBEE] p-4 rounded-lg border border-[#F44336]"></div>

                            <!-- Full Name Field -->
                            <div class="space-y-2">
                                <label asp-for="FullName" class="block text-[#666666] font-semibold">
                                    <svg class="w-4 h-4 inline mr-2 text-[#205493]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                    </svg>
                                    Họ và tên
                                </label>
                                <input asp-for="FullName"
                                       class="w-full px-4 py-3 border border-[#CCCCCC] rounded-xl bg-white text-[#212121] placeholder-[#666666]
                                              focus:border-[#205493] focus:ring-2 focus:ring-[#205493]/20 focus:outline-none
                                              transition-all duration-300 hover:border-[#4A8BDF]"
                                       placeholder="Nhập họ và tên đầy đủ" />
                                <span asp-validation-for="FullName" class="text-[#F44336] text-sm"></span>
                            </div>

                            <!-- Email Field (Read-only) -->
                            <div class="space-y-2">
                                <label asp-for="Email" class="block text-[#666666] font-semibold">
                                    <svg class="w-4 h-4 inline mr-2 text-[#205493]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                    </svg>
                                    Email
                                </label>
                                <input asp-for="Email" readonly
                                       class="w-full px-4 py-3 border border-[#E0E0E0] rounded-xl bg-[#F5F5F5] text-[#666666] cursor-not-allowed" />
                                <p class="text-[#666666] text-sm flex items-center">
                                    <svg class="w-4 h-4 mr-1 text-[#FFC107]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                    Email không thể thay đổi sau khi đăng ký
                                </p>
                            </div>

                            <!-- Phone Number Field -->
                            <div class="space-y-2">
                                <label asp-for="PhoneNumber" class="block text-[#666666] font-semibold">
                                    <svg class="w-4 h-4 inline mr-2 text-[#205493]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                                    </svg>
                                    Số điện thoại
                                </label>
                                <input asp-for="PhoneNumber" type="tel"
                                       class="w-full px-4 py-3 border border-[#CCCCCC] rounded-xl bg-white text-[#212121] placeholder-[#666666]
                                              focus:border-[#205493] focus:ring-2 focus:ring-[#205493]/20 focus:outline-none
                                              transition-all duration-300 hover:border-[#4A8BDF]"
                                       placeholder="Nhập số điện thoại" />
                                <span asp-validation-for="PhoneNumber" class="text-[#F44336] text-sm"></span>
                            </div>

                            <!-- Bio Field -->
                            <div class="space-y-2">
                                <label class="block text-[#666666] font-semibold">
                                    <svg class="w-4 h-4 inline mr-2 text-[#205493]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
                                    </svg>
                                    Giới thiệu bản thân (tùy chọn)
                                </label>
                                <textarea name="Bio" rows="4"
                                          class="w-full px-4 py-3 border border-[#CCCCCC] rounded-xl bg-white text-[#212121] placeholder-[#666666]
                                                 focus:border-[#205493] focus:ring-2 focus:ring-[#205493]/20 focus:outline-none
                                                 transition-all duration-300 hover:border-[#4A8BDF] resize-none"
                                          placeholder="Viết vài dòng giới thiệu về bản thân, sở thích và mục tiêu học tập của bạn..."></textarea>
                            </div>

                            <!-- Learning Preferences -->
                            <div class="space-y-4">
                                <h4 class="text-[#212121] font-semibold flex items-center">
                                    <svg class="w-5 h-5 mr-2 text-[#205493]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4" />
                                    </svg>
                                    Tùy chọn học tập
                                </h4>

                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    <!-- Daily Goal -->
                                    <div class="space-y-2">
                                        <label class="block text-[#666666] font-medium">Mục tiêu hàng ngày</label>
                                        <select name="DailyGoal" class="w-full px-4 py-3 border border-[#CCCCCC] rounded-xl bg-white text-[#212121] focus:border-[#205493] focus:ring-2 focus:ring-[#205493]/20 focus:outline-none">
                                            <option value="10">10 từ mới/ngày</option>
                                            <option value="20" selected>20 từ mới/ngày</option>
                                            <option value="30">30 từ mới/ngày</option>
                                            <option value="50">50 từ mới/ngày</option>
                                        </select>
                                    </div>

                                    <!-- Preferred Language -->
                                    <div class="space-y-2">
                                        <label class="block text-[#666666] font-medium">Ngôn ngữ giao diện</label>
                                        <select name="PreferredLanguage" class="w-full px-4 py-3 border border-[#CCCCCC] rounded-xl bg-white text-[#212121] focus:border-[#205493] focus:ring-2 focus:ring-[#205493]/20 focus:outline-none">
                                            <option value="vi" selected>Tiếng Việt</option>
                                            <option value="en">English</option>
                                        </select>
                                    </div>
                                </div>

                                <!-- Notification Preferences -->
                                <div class="space-y-3">
                                    <label class="block text-[#666666] font-medium">Tùy chọn thông báo</label>

                                    <div class="space-y-3">
                                        <label class="flex items-center">
                                            <input type="checkbox" name="EmailNotifications" value="true" checked
                                                   class="w-4 h-4 text-[#205493] border-[#CCCCCC] rounded focus:ring-[#205493] focus:ring-2">
                                            <span class="ml-3 text-[#666666]">Nhận thông báo qua email</span>
                                        </label>

                                        <label class="flex items-center">
                                            <input type="checkbox" name="WebNotifications" value="true" checked
                                                   class="w-4 h-4 text-[#205493] border-[#CCCCCC] rounded focus:ring-[#205493] focus:ring-2">
                                            <span class="ml-3 text-[#666666]">Nhận thông báo trên web</span>
                                        </label>

                                        <label class="flex items-center">
                                            <input type="checkbox" name="AutoPlayAudio" value="true"
                                                   class="w-4 h-4 text-[#205493] border-[#CCCCCC] rounded focus:ring-[#205493] focus:ring-2">
                                            <span class="ml-3 text-[#666666]">Tự động phát âm thanh khi học</span>
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <!-- Hidden field for avatar -->
                            <input type="hidden" name="ProfileImageFile" id="avatar-file-input">

                            <!-- Action Buttons -->
                            <div class="flex flex-col sm:flex-row gap-4 pt-6 border-t border-[#E0E0E0]">
                                <button type="submit"
                                        class="flex-1 bg-[#205493] hover:bg-[#1C4E80] text-white font-semibold py-3 px-6 rounded-xl
                                               transition-all duration-300 transform hover:scale-105 hover:shadow-lg hover:shadow-[#205493]/30
                                               flex items-center justify-center">
                                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                    </svg>
                                    Lưu thay đổi
                                </button>

                                <a asp-controller="Manage" asp-action="Index"
                                   class="flex-1 bg-[#F5F5F5] hover:bg-[#E0E0E0] text-[#666666] hover:text-[#212121] font-semibold py-3 px-6 rounded-xl
                                          transition-all duration-300 text-center flex items-center justify-center border border-[#E0E0E0]">
                                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                                    </svg>
                                    Hủy bỏ
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        function previewAvatar(input) {
            if (input.files && input.files[0]) {
                const file = input.files[0];

                // Validate file size (2MB max)
                if (file.size > 2 * 1024 * 1024) {
                    alert('Kích thước file không được vượt quá 2MB');
                    input.value = '';
                    return;
                }

                // Validate file type
                if (!file.type.match('image.*')) {
                    alert('Vui lòng chọn file hình ảnh hợp lệ');
                    input.value = '';
                    return;
                }

                const reader = new FileReader();
                reader.onload = function(e) {
                    const preview = document.getElementById('avatar-preview');

                    // If it's currently showing initials, replace with image
                    if (preview.tagName === 'DIV') {
                        const img = document.createElement('img');
                        img.id = 'avatar-preview';
                        img.className = 'w-32 h-32 rounded-full mx-auto object-cover shadow-lg border-4 border-[#205493]';
                        img.src = e.target.result;
                        img.alt = 'Profile Preview';
                        preview.parentNode.replaceChild(img, preview);
                    } else {
                        preview.src = e.target.result;
                    }
                };
                reader.readAsDataURL(file);

                // Store file reference for form submission
                document.getElementById('avatar-file-input').value = file.name;
            }
        }

        // Auto-save draft functionality
        let saveTimeout;
        const formInputs = document.querySelectorAll('input[type="text"], input[type="tel"], textarea, select');

        formInputs.forEach(input => {
            input.addEventListener('input', function() {
                clearTimeout(saveTimeout);
                saveTimeout = setTimeout(() => {
                    // Auto-save draft to localStorage
                    const formData = new FormData(document.querySelector('form'));
                    const draftData = {};
                    for (let [key, value] of formData.entries()) {
                        draftData[key] = value;
                    }
                    localStorage.setItem('profileDraft', JSON.stringify(draftData));
                }, 2000);
            });
        });

        // Load draft on page load
        window.addEventListener('load', function() {
            const draft = localStorage.getItem('profileDraft');
            if (draft) {
                const draftData = JSON.parse(draft);
                Object.keys(draftData).forEach(key => {
                    const input = document.querySelector(`[name="${key}"]`);
                    if (input && input.type !== 'file') {
                        if (input.type === 'checkbox') {
                            input.checked = draftData[key] === 'true';
                        } else {
                            input.value = draftData[key];
                        }
                    }
                });
            }
        });

        // Clear draft on successful submit
        document.querySelector('form').addEventListener('submit', function() {
            localStorage.removeItem('profileDraft');
        });
    </script>
}
