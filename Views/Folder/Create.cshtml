@model VocaWebApp.Models.Folder
@{
    ViewData["Title"] = "Tạo Folder Mới";
}

<div class="min-h-screen bg-gray-50 py-12">
    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Tạo Folder Mới</h1>
            <p class="text-gray-600">Tạo một folder để tổ chức các bộ từ vựng của bạn</p>
        </div>

        <!-- Form Card -->
        <div class="bg-white rounded-2xl shadow-lg border border-gray-200 overflow-hidden">
            <form asp-action="Create" method="post" class="p-8">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-red-600 mb-4"></div>
                <!-- Folder Name -->
                <div class="mb-6">
                    <label asp-for="Name" class="block text-sm font-semibold text-gray-700 mb-2">
                        Tên Folder <span class="text-red-500">*</span>
                    </label>
                    <input asp-for="Name"
                           class="w-full px-4 py-3 border border-gray-300 rounded-xl bg-white focus:border-[#205493] focus:ring-4 focus:ring-blue-100 transition-all duration-300 outline-none"
                           placeholder="Nhập tên folder..."
                           maxlength="100" />
                    <span asp-validation-for="Name" class="text-red-500 text-sm mt-1 block"></span>
                </div>

                <!-- Folder Description -->
                <div class="mb-8">
                    <label asp-for="Description" class="block text-sm font-semibold text-gray-700 mb-2">
                        Mô Tả
                    </label>
                    <textarea asp-for="Description"
                              rows="4"
                              class="w-full px-4 py-3 border border-gray-300 rounded-xl bg-white focus:border-[#205493] focus:ring-4 focus:ring-blue-100 transition-all duration-300 outline-none resize-none"
                              placeholder="Mô tả ngắn gọn về folder này..."
                              maxlength="500"></textarea>
                    <span asp-validation-for="Description" class="text-red-500 text-sm mt-1 block"></span>
                    <p class="text-gray-500 text-sm mt-1">Tối đa 500 ký tự</p>
                </div>

                <!-- Action Buttons -->
                <div class="flex flex-col sm:flex-row gap-4">
                    <button type="submit"
                            class="flex-1 bg-[#205493] text-white py-3 px-6 rounded-xl hover:bg-[#1C4E80] transition-all duration-300 font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-1">
                        <span class="flex items-center justify-center">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            Tạo Folder
                        </span>
                    </button>
                    <a href="@Url.Action("Index")"
                       class="flex-1 bg-gray-100 text-gray-700 py-3 px-6 rounded-xl hover:bg-gray-200 transition-all duration-300 font-semibold text-center">
                        <span class="flex items-center justify-center">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                            Hủy
                        </span>
                    </a>
                </div>
            </form>
        </div>

        <!-- Tips Card -->
        <div class="mt-8 bg-blue-50 border border-blue-200 rounded-2xl p-6">
            <div class="flex items-start">
                <div class="flex-shrink-0">
                    <svg class="w-6 h-6 text-[#205493]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <div class="ml-3">
                    <h3 class="text-sm font-semibold text-[#205493] mb-2">Mẹo tạo folder hiệu quả</h3>
                    <ul class="text-sm text-gray-700 space-y-1">
                        <li>• Đặt tên folder ngắn gọn, dễ nhớ</li>
                        <li>• Sử dụng mô tả để ghi chú mục đích sử dụng</li>
                        <li>• Có thể tạo folder theo chủ đề hoặc cấp độ</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
