@model VocaWebApp.Models.Folder
@{
    ViewData["Title"] = "Chỉnh Sửa Folder";
}

<div class="min-h-screen bg-gray-50 py-12">
    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Chỉnh Sửa Folder</h1>
            <p class="text-gray-600">Cập nhật thông tin folder của bạn</p>
        </div>

        <!-- Form Card -->
        <div class="bg-white rounded-2xl shadow-lg border border-gray-200 overflow-hidden">
            <form asp-action="Edit" method="post" class="p-8">
                @Html.AntiForgeryToken()
                <input asp-for="Id" type="hidden" />
                <input asp-for="CreatedAt" type="hidden" />

                <!-- Folder Name -->
                <div class="mb-6">
                    <label asp-for="Name" class="block text-sm font-semibold text-gray-700 mb-2">
                        Tên Folder <span class="text-red-500">*</span>
                    </label>
                    <input asp-for="Name"
                           class="w-full px-4 py-3 border border-gray-300 rounded-xl bg-white focus:border-[#205493] focus:ring-4 focus:ring-blue-100 transition-all duration-300 outline-none"
                           placeholder="Nhập tên folder..."
                           maxlength="100" />
                    <span asp-validation-for="Name" class="text-red-500 text-sm mt-1 block"></span>
                </div>

                <!-- Folder Description -->
                <div class="mb-8">
                    <label asp-for="Description" class="block text-sm font-semibold text-gray-700 mb-2">
                        Mô Tả
                    </label>
                    <textarea asp-for="Description"
                              rows="4"
                              class="w-full px-4 py-3 border border-gray-300 rounded-xl bg-white focus:border-[#205493] focus:ring-4 focus:ring-blue-100 transition-all duration-300 outline-none resize-none"
                              placeholder="Mô tả ngắn gọn về folder này..."
                              maxlength="500"></textarea>
                    <span asp-validation-for="Description" class="text-red-500 text-sm mt-1 block"></span>
                    <p class="text-gray-500 text-sm mt-1">Tối đa 500 ký tự</p>
                </div>

                <!-- Folder Info -->
                <div class="bg-gray-50 rounded-xl p-4 mb-8">
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 text-sm">
                        <div>
                            <span class="text-gray-600">Ngày tạo:</span>
                            <span class="font-medium text-gray-900 ml-2">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
                        </div>
                        <div>
                            <span class="text-gray-600">Số bộ từ vựng:</span>
                            <span class="font-medium text-gray-900 ml-2">@(Model.VocaSets?.Count ?? 0)</span>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex flex-col sm:flex-row gap-4">
                    <button type="submit"
                            class="flex-1 bg-[#205493] text-white py-3 px-6 rounded-xl hover:bg-[#1C4E80] transition-all duration-300 font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-1">
                        <span class="flex items-center justify-center">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            Cập Nhật
                        </span>
                    </button>
                    <a href="@Url.Action("Index")"
                       class="flex-1 bg-gray-100 text-gray-700 py-3 px-6 rounded-xl hover:bg-gray-200 transition-all duration-300 font-semibold text-center">
                        <span class="flex items-center justify-center">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                            Hủy
                        </span>
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
