@model VocaSet
@{
    ViewData["Title"] = "Chỉnh sửa Bộ từ";
}
<div class="container mx-auto px-4 max-w-xl">
    <h1 class="text-3xl font-bold mb-4">Chỉnh sửa Bộ từ</h1>
    <form asp-action="Edit" method="post" class="card p-8 space-y-6">
        <input asp-for="Id" type="hidden" />
        <div>
            <label asp-for="Name" class="form-label">Tên bộ từ<span class="text-red-500">*</span></label>
            <input asp-for="Name" class="form-input w-full" />
            <span asp-validation-for="Name" class="text-error text-sm"></span>
        </div>
        <div>
            <label asp-for="Description" class="form-label">Mô tả</label>
            <textarea asp-for="Description" rows="4" class="form-input w-full"></textarea>
        </div>
        <div>
            <label asp-for="Status" class="form-label">Chia sẻ</label>
            <select asp-for="Status" class="form-input w-full">
                <option value="private">Riêng tư</option>
                <option value="public-view">Công khai</option>
                <option value="public-copy">Công khai &amp; Cho phép sao chép</option>
            </select>
        </div>
        <div>
            <label asp-for="Keywords" class="form-label">Từ khóa</label>
            <input asp-for="Keywords" class="form-input w-full" />
        </div>
        <div class="flex gap-4">
            <button type="submit" class="btn-primary flex-1">Cập nhật</button>
            <a asp-action="Display" asp-route-id="@Model.Id" class="btn-secondary flex-1 text-center">Hủy</a>
        </div>
    </form>
</div>
