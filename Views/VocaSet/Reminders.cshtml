@model VocaWebApp.Controllers.RemindersViewModel
@{
    ViewData["Title"] = "Lịch Nhắc Ôn";
}
<div class="min-h-screen bg-gray-50 p-6">
    <div class="max-w-3xl mx-auto bg-white rounded-xl shadow-lg overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-2xl font-semibold text-gray-800">Lịch nhắc ôn</h2>
        </div>
        <div class="p-6">
            <form asp-action="AddReminder" method="post" class="space-y-4">
                @Html.AntiForgeryToken()
                <input asp-for="VocaSetId" type="hidden" />
                <div>
                    <label asp-for="ReviewDate" class="block text-gray-600">Ngày ôn tập</label>
                    <input asp-for="ReviewDate" type="date"
                           class="w-full px-4 py-2 border rounded-xl focus:border-blue-700" />
                    <span asp-validation-for="ReviewDate" class="text-red-600 text-sm"></span>
                </div>
                <button type="submit" class="bg-blue-700 text-white px-6 py-2 rounded-xl">
                    Thêm nhắc
                </button>
            </form>

            <ul class="mt-6 space-y-3">
                @foreach (var r in Model.Items)
                {
                    <li class="flex justify-between p-4 bg-gray-50 rounded-xl">
                        <span>@r.ReviewDate.ToString("dd/MM/yyyy")</span>
                        <span class="px-3 py-1 rounded-full
                         @(r.IsSent ? "bg-green-50 text-green-700" : "bg-yellow-50 text-yellow-700")">
                            @(r.IsSent ? "Đã gửi" : "Chưa gửi")
                        </span>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
